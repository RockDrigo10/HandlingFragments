<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.admin.handlingfragments.MainActivity">

    <TextView
        android:text="This fragment is added statically"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <fragment
        android:id="@+id/redFragment"
        android:name="com.example.admin.handlingfragments.RedFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <TextView
        android:text="Add new dynamically"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddFrag"
        android:onClick="addFragment"
        android:text="Add Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddYellow"
        android:onClick="addFragment"
        android:text="Add Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddBlue"
        android:onClick="addFragment"
        android:text="Add Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnRemove"
        android:onClick="addFragment"
        android:text="Remove ALL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnRemoveRed"
        android:onClick="addFragment"
        android:text="Remove red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        ></FrameLayout>
    <TextView
        android:id="@+id/tvBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
